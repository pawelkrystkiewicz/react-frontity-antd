{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "jsxImportSource": "react",
    "allowJs": true
  },
  "exclude": ["**/node_modules/*", "**/dist/*", "**/build/*", "e2e/e2e.js"],
  "include": ["packages", "projects"]
}
